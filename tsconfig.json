{
  "extends": "@tsconfig/node16",
  "compilerOptions": {
    "lib": [
      "dom"
    ],
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "baseUrl": ".",
    "strict": true,
    "stripInternal": true,
    "skipLibCheck": true,
    "paths": {
      "./*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules/*"
  ]
}
